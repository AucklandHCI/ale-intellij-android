<meta-model>
  <!-- ================= Layouts ================= -->

  <meta model="com.intellij.android.designer.ale.model.layout.alm.RadALMLayoutComponent"
        layout="com.intellij.android.designer.ale.model.layout.alm.RadALMLayout"
        class="nz.ac.auckland.alm.android.ALMLayout"
        tag="nz.ac.auckland.alm.android.ALMLayout"
        fill="both">

    <properties important="gravity ignoreGravity"/>

    <palette title="ALMLayout" icon="AndroidIcons.Views.RelativeLayout"
             tooltip="A Layout where the positions of the children can be described in relation to each other or to the parent."/>

    <creation>
      <![CDATA[
          <nz.ac.auckland.alm.android.ALMLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
          </nz.ac.auckland.alm.android.ALMLayout>
      ]]>
    </creation>
  </meta>

  <wrap-in>
    <item tag="nz.ac.auckland.alm.android.ALMLayout"/>
  </wrap-in>

  <!-- ================= Palette ================= -->

  <palette>
    <group name="Layouts">
      <item tag="nz.ac.auckland.alm.android.ALMLayout"/>
    </group>
  </palette>

</meta-model>
